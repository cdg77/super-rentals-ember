<li>{{#link-to 'rental' rental.id}}{{rental.owner}}'s {{rental.type}} in {{rental.city}}{{/link-to}}
    {{#if isImageShowing }}
        <p><img {{action 'imageHide'}} src="{{rental.image}}" alt="{{rental.type}}" /></p>
    {{else}}
        <button {{action 'imageShow'}} class="btn btn-primary">Show Image</button>
    {{/if}}
    {{update-rental rental=rental update="update"}}
    <button {{action 'delete' rental}}>Delete</button>
</li>
